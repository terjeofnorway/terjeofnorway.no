---
// Projects section for homepage
import Card from '../Card/Card.astro';
import SectionTitle from '../SectionTitle/SectionTitle.astro';
import styles from './ProjectsSection.module.scss';

const [projectData] = await Astro.glob('../../../content/project.md');
const { title, projects } = projectData.frontmatter;
---
<section class={styles.projectsSection}>
  <div class="main-wrapper">
    <SectionTitle>{title}</SectionTitle>
    <div class={styles.projectsColumns}>
      {projects && projects.map((project: any) => (
        <Card 
          title={project.title}
          description={project.description}
          link={project.link}
          linkText={project.linkText}
          icon={project.icon}
          iconAlt={project.iconAlt}
        />
      ))}
    </div>
  </div>
</section> 