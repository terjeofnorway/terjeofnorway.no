---
// Articles section for homepage
import styles from './ArticlesSection.module.scss';
import Card from './../Card/Card.astro';
import SectionTitle from './../SectionTitle/SectionTitle.astro';

const [articlesData] = await Astro.glob('../../../content/articles.md');
const { title, articles } = articlesData.frontmatter;
---
<section class={styles.articlesSection}>
  <div class="main-wrapper">
    <SectionTitle>{title}</SectionTitle>
    <div class={styles.articlesColumns}>
      {articles && articles.map((article: any) => (
        <Card 
          title={article.title}
          description={article.description}
          link={article.link}
          linkText={article.linkText}
        />
      ))}
    </div>
  </div>
</section> 