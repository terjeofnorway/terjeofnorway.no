---
// Articles section for homepage
import styles from './ArticlesSection.module.scss';
import Card from './Card/Card.astro';
---
<section class={styles.articlesSection}>
  <div class="main-wrapper">
    <h2 class={styles.articlesTitle}>Articles</h2>
    <div class={styles.articlesColumns}>
      <Card 
        title="Micro Learning"
        description="An article about micro learning and the importance of also doing small projects in 10 minute bulk."
        link="https://medium.com/systek/microlearning"
        linkText="medium.com/systek/microlearning"
      />
      <Card 
        title="Sustainable web"
        description="Some thoughts and ramblings about how measuring sustainability for websites."
        link="https://medium.com/systek/microlearning"
        linkText="medium.com/systek/microlearning"
      />
    </div>
  </div>
</section> 