{
  "name": "Terjeofnorway.no",
  "version": "1.0.0",
  "description": "My personal web site",
  "main": "index.js",
  "repository": "https://github.com/terjeofnorway/terjeofnorway.no",
  "author": "Terje Karlsen",
  "license": "MIT",
  "bugs": "",
  "keywords": [
    "npm",
    "scripts",
    "npm scripts",
    "watch",
    "minify",
    "compress"
  ],
  "scripts": {
    "clean": "rimraf public/dist/*",
    "scss": "node-sass --output-style compressed assets/styles -o public/dist/styles --include-path 'node_modules/bourbon/app/assets/stylesheets' --include-path 'node_modules/bourbon-neat/app/assets/stylesheets'",
    "postscss": "postcss --use autoprefixer -b 'last 2 versions' < public/dist/styles/app.css | postcss --use cssnano > public/dist/styles/app.min.css",
    "lint": "eslint assets/scripts",
    "preuglify": "mkdirp public/dist/scripts",
    "uglify": "babel assets/scripts/ | uglifyjs -b -o public/dist/scripts/app.js",
    "imagecopy": "copyfiles --up 2 assets/images/**/* assets/images/* public/dist/images",
    "serve": "browser-sync start --proxy terjeofnorway.dev --files \"public/dist/styles/*.css, public/dist/scripts/*.js, craft/templates/**/*.html\" --no-notify",
    "watch:sass": "onchange 'assets/styles/**/*.scss' -- npm run build:sass",
    "watch:js": "onchange 'assets/scripts/**/*.js' -- npm run build:js",
    "watch:images": "onchange 'assets/images/*' -- npm run build:images",
    "watch:all": "npm-run-all -p serve watch:sass watch:js watch:images",
    "watch": "npm run watch:all",
    "test": "karma start",
    "build:sass": "npm run scss",
    "build:js": "npm run lint && npm run uglify",
    "build:images": "npm run imagecopy",
    "build:all": "npm run build:sass && npm run build:js && npm run build:images",
    "build": "npm run build:all"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-cli": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-latest": "^6.16.0",
    "browser-sync": "^2.12.8",
    "eslint": "^2.10.2",
    "eslint-config-standard": "^5.3.1",
    "eslint-plugin-promise": "^1.3.0",
    "eslint-plugin-standard": "^1.3.2",
    "html-minifier": "^3.2.3",
    "html-minifier-cli": "^0.1.0",
    "jasmine": "^2.5.2",
    "jasmine-core": "^2.5.2",
    "karma": "^1.3.0",
    "karma-babel-preprocessor": "^6.0.1",
    "karma-browserify": "^1.0.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-cli": "^0.0.4",
    "karma-jasmine": "^1.0.2",
    "karma-mocha": "^0.1.10",
    "karma-phantomjs-launcher": "^1.0.2",
    "mkdirp": "^0.5.1",
    "node-sass": "^3.7.0",
    "npm-run-all": "^2.1.1",
    "onchange": "^2.4.0",
    "postcss-cli": "^2.5.2",
    "rimraf": "^2.5.4",
    "uglify-js": "^2.6.2"
  },
  "dependencies": {
    "bourbon": "^4.2.7",
    "bourbon-neat": "^1.8.0",
    "copyfiles": "^1.0.0",
    "cssnano": "^3.8.2",
    "mocha": "^3.2.0"
  }
}
